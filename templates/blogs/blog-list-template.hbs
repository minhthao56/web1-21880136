<h1 class="mb-4">Blogs</h1>
{{#each data}}
  <div class="mb-4 clearfix">
    <h3>{{name}}</h3>
    <p class="mb-2 text-black-50">by
      {{author}}
      in
      <a
        href="#"
        onclick='fetchDataAndBindingView(
              "blogs/categories/{{category.id}}?page=1",
              "blog-list-template",
              "blogs-list",
              true
            )'
      >Blog.{{category.name}}</a>
      on
      {{formatDate date}}
      Hits:
      <a href="?req=blogs/{{id}}">Comment ({{comments.length}})</a>
    </p>
    <div class="clearfix">
      <img
        src="{{thumbpath}}"
        alt="{{thumbpath}}"
        class="float-start img-thumbnail rounded-4 me-3"
      />
      <p class="text-black-50">
        {{summary}}
      </p>
      <a href="?req=blogs/{{id}}" class="readmore btn btn-link p-0 m-0">Read
        more</a>
    </div>
  </div>
{{/each}}

{{#pagination currentPage pageCount}}
  <nav aria-label="Page navigation">
    <ul class="pagination">
      {{#each pages}}
        {{#if isCurrent}}
          <li class="page-item disabled" aria-current="page">
            <a
              class="page-link"
              href="#"
              onclick='fetchDataAndBindingView(
                    "blogs?page={{page}}",
                    "blog-list-template",
                    "blogs-list",
                    true
                  );'
            >{{page}}</a>
          </li>
        {{/if}}
        {{#unless isCurrent}}
          <li class="page-item"><a
              class="page-link"
              href="#"
              onclick='fetchDataAndBindingView(
                       "blogs?page={{page}}",
                      "blog-list-template",
                      "blogs-list",
                      true
                    );'
            >{{page}}</a></li>
        {{/unless}}
      {{/each}}
    </ul>
  </nav>
{{/pagination}}