{{#each data}}
  <div class="mb-4 clearfix">
    <h3>{{name}}</h3>
    <p class="mb-2 text-black-50">by
      {{author}}
      in
      <a href="#">Blog.{{category.name}}</a>
      on
      {{formatDate date}}
      Hits:
      <a href="#">Comment ({{comments.length}})</a>
    </p>
    <div class="clearfix">
      <img
        src="{{thumbpath}}"
        alt="{{thumbpath}}"
        class="float-start img-thumbnail rounded-4 me-3"
      />
      <div class="text-black-50">
        {{{description}}}
      </div>
    </div>
  </div>
  <h3>Leave your comments</h3>
  <h3>Post comment as a guest</h3>
  <form class="mb-3 row" onsubmit="addComment(event)" id="form-add-comment">
    <input type="hidden" value="{{id}}" id="blogId" />
    <div class="col">
      <label
        for="name"
        class="col-sm-2 col-form-label text-black-50"
      >Name(Required)</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          required
        />
      </div>
    </div>
    <div class="col mb-4">
      <label
        for="email"
        class="col-sm-2 col-form-label text-black-50"
      >Email</label>
      <div class="col-sm-10">
        <input
          type="email"
          class="form-control"
          id="email"
          pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
          required
          name="email"
        />
      </div>
    </div>
    <div class="mb-4">
      <textarea
        class="form-control"
        id="comment"
        style="height: 100px"
        placeholder="Enter your message"
        required
        name="comment"
      ></textarea>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          id="argee"
          required
          name="agree"
        />
        <label class="form-check-label text-black-50" for="argee">
          Agree to term and conditions
        </label>
      </div>
      <button type="submit" class="btn btn-link p-0 m-0">Submit Comment</button>
    </div>
    <div class="text-danger text-center" id="message-error"></div>
    <div
      class="text-uppercase bg-black bg-opacity-75 text-white-50 py-1"
      id="idComment"
    >comments</div>
  </form>
  <div id="idComment">
    {{#each comments}}
      <p class="text-black-50">
        {{name}}
        -
        {{formatDate date}}
      </p>
      <p class="text-black-50">
        {{summary}}
      </p>
      <hr />
    {{/each}}
  </div>
{{/each}}